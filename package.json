{
  "name": "kengo",
  "version": "0.1.4",
  "description": "A Prisma-like, type-safe, and reactive ORM for IndexedDB. Say goodbye to callbacks and enjoy a modern developer experience in the browser",
  "author": "Zander Zi <zanderzi0913@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "build:analyze": "bun run build && bun run analyze",
    "analyze": "echo 'Bundle sizes:' && ls -lh dist/*.js dist/*.cjs | grep -v '.map'",
    "size": "bun run build && size-limit",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@size-limit/file": "^11.2.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "fake-indexeddb": "^6.1.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "terser": "^5.43.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "kengo",
    "indexeddb",
    "orm",
    "database",
    "browser",
    "client-side",
    "storage",
    "prisma",
    "drizzle",
    "typescript",
    "type-safe",
    "reactive",
    "localstorage",
    "pwa"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joe960913/kengo.git"
  },
  "bugs": {
    "url": "https://github.com/joe960913/kengo/issues"
  },
  "homepage": "https://github.com/joe960913/kengo#readme",
  "engines": {
    "node": ">=18"
  }
}
